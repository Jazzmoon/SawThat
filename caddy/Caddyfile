{$DOMAIN:localhost}:80 {
  handle_path /client/* {
    reverse_proxy * http://client:8080
  }

  handle_path /api/* {
    reverse_proxy * http://server:3000
  }
}

{$GAME_DOMAIN:localhost}:80 {
  handle_path /game/* {
    reverse_proxy * http://game:8080
  }

  handle_path /api/* {
    reverse_proxy * http://server:3000
  }
}