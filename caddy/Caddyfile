{$DOMAIN:localhost}:80,
{$DOMAIN:localhost}:443 {
  handle /client/* {
    uri strip_prefix /client
    reverse_proxy /* http://client:8081
  }

  handle /game/* {
    uri strip_prefix /game
    reverse_proxy /* http://game:8082
  }

  handle /api/* {
    uri strip_prefix /api
    reverse_proxy /* http://server:3000
  }
}